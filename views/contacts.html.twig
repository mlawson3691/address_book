<html>
    <head>
        <title>Address Book</title>
    </head>
    <body>
        <h1>Address Book</h1>
        {% if contacts is not empty %}
            <h2>Your contacts:</h2>
            <ul>
                {% for contact in contacts %}
                    <li>
                        <h3>{{ contact.getName }}</h3>
                        <p><strong>Phone:</strong> {{ contact.getNumber }}</p>
                        <p><strong>Address:</strong> {{ contact.getAddress }}</p>
                        <hr>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <h2>Add a New Contact:</h2>
        <form action='/create_contact' method='post'>
            <div>
                <label for='name'>Name:</label>
                <input id='name' name='name' type='text'>
            </div>
            <div>
                <label for='number'>Phone Number:</label>
                <input id='number' name='number' type='text'>
            </div>
            <div>
                <label for='address'>Address:</label>
                <input id='address' name='address' type='text'>
            </div>
            <button type='submit'>Add Contact</button>
        </form>

        <form action='/delete_contacts' method='post'>
            <button type='submit'>Clear All Contacts</button>
        </form>
    </body>
</html>
